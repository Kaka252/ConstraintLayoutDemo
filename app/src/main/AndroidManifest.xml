<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhouyou.cllayout">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".positioning.PositioningViewActivity"
            android:label="@string/positioning_demo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".positioning.PositioningRelativeActivity"
            android:label="@string/positioning_demo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bias.BiasActivity"
            android:label="@string/bias_demo"
            android:screenOrientation="portrait" />

        <activity
            android:name=".chain.ChainActivity"
            android:label="@string/chain_demo"
            android:screenOrientation="portrait" />

        <activity
            android:name=".practice.Practice1Activity"
            android:label="@string/constraint_layout_practise_1"
            android:screenOrientation="portrait" />
        <activity
            android:name=".constraintset.ConstraintSetActivity"
            android:label="@string/constraint_set_demo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".guideline.GuideLineActivity"
            android:label="@string/constraint_guide_line"
            android:screenOrientation="portrait" />
    </application>

</manifest>